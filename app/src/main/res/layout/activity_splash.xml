<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splash"
        android:layout_marginTop="@dimen/dimen120"
        android:layout_width="@dimen/dimen460"
        android:layout_height="@dimen/dimen360"
        android:src="@drawable/hulk480"
        android:layout_centerHorizontal="true"
        android:padding="50dp"/>
    <TextView
        android:id="@+id/heading"
        android:layout_marginTop="@dimen/dimen560"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/font24"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>